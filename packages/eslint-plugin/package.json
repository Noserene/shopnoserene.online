{
  "name": "eslint-plugin-h2",
  "version": "0.0.0",
  "description": "Eslint rules for Hydrogen storefronts",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "dev": "yarn build --preserveWatchOutput -w",
    "build": "tsc -p .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./react.js": {
      "import": "./dist/configs/react.js",
      "require": "./dist/configs/react.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shopify/hydrogen.git",
    "directory": "packages/eslint-plugin"
  },
  "dependencies": {
    "@remix-run/eslint-config": "^1.15.0",
    "@shopify/eslint-plugin-cli": "^3.45.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/experimental-utils": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@typescript-eslint/types": "^5.57.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^2.8.7"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "dedent": "^0.7.0",
    "eslint": "^8.38.0",
    "eslint-plugin-tsdoc": "^0.2.17"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  }
}
